// vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "translation_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["requirements.txt"],
        "buildCommand": "apt-get update && apt-get install -y portaudio19-dev && pip3 install -r requirements.txt"
      }
    }
  ]
}
